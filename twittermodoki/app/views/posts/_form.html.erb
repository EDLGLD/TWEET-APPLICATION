<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> ポストに投稿できない内容がありました:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <%= form.label :ツイート内容 %>
  <%= form.text_area :content, class: 'text-area-large' %>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
